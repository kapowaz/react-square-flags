{
  "name": "react-square-flags",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A React component for displaying a set of minimalist, square country flags",
  "repository": "github:kapowaz/react-square-flags",
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.22.0"
  },
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.cts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "readme.md"
  ],
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint --ext .js,.ts src/",
    "lintervention": "lintervention",
    "lintervention:staged": "yarn lintervention --scope staged",
    "lintervention:branch": "yarn lintervention --scope branch",
    "typecheck": "tsc --emitDeclarationOnly false --noEmit",
  },
  "dependencies": {
    "minimist": "^1.2.6"
    "clean": "rm -rf ./dist ./compiled",
    "build": "yarn clean && yarn build:ts && yarn build:js",
    "build:ts": "tsc -p ./tsconfig.build.json",
    "build:js": "rollup -c rollup.config.ts --configPlugin esbuild",
    "build:publish": "yarn lint && yarn test && yarn test:playwright && yarn build && npm publish --tag beta",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@semantic-release/changelog": "^6.0.2",
    "@docusaurus/eslint-plugin": "^3.7.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/minimist": "^1.2.2",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-styling-webpack": "^1.0.1",
    "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-webpack5": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "css-loader": "^7.1.2",
    "eslint": "^9",
    "eslint-plugin-storybook": "^0.12.0",
    "jest": "29",
    "jest-cli": "29",
    "jest-environment-jsdom": "^29.7.0",
    "jest-matcher-one-of": "^1.0.2",
    "jest-watch-typeahead": "^2.2.2",
    "jsdom": "^26.1.0",
    "lintervention": "^3.3.0",
    "prettier": "^3.5.1",
    "rollup": "^4.41.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-node-externals": "^8.0.0",
    "storybook": "^8.6.14",
    "storybook-css-modules": "^1.0.8",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.3.3",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.32.1",
    "typescript-plugin-css-modules": "^5.1.0",
    "webpack": "^5"
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
